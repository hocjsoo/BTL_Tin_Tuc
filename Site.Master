    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="Scripts.js"></script>
    <script type="text/javascript">
        // Handle header search box
        (function() {
            var headerSearchInput = document.getElementById('headerSearchInput');
            var headerSearchButton = document.getElementById('headerSearchButton');
            
            function performSearch() {
                var query = headerSearchInput ? headerSearchInput.value.trim() : '';
                if (query) {
                    window.location.href = 'Search.aspx?q=' + encodeURIComponent(query);
                } else {
                    // If empty, just go to search page
                    window.location.href = 'Search.aspx';
                }
            }
            
            if (headerSearchInput) {
                // Handle Enter key
                headerSearchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        performSearch();
                    }
                });
            }
            
            if (headerSearchButton) {
                // Handle button click
                headerSearchButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    performSearch();
                });
            }
        })();
        
        // Make entire article cards clickable
        (function() {
            function makeCardClickable(card, articleUrl) {
                if (!articleUrl || articleUrl === '#' || articleUrl === 'javascript:void(0);') {
                    return;
                }
                
                // Skip if already processed with the same URL
                if (card.dataset.clickable === 'true' && card.dataset.articleUrl === articleUrl) {
                    return;
                }
                
                // Make card clickable
                card.style.cursor = 'pointer';
                card.dataset.clickable = 'true';
                card.dataset.articleUrl = articleUrl;
                
                // Add double-click event - each card has its own timer stored in closure
                var clickTimer = null;
                var clickHandler = function(e) {
                    // Don't navigate if clicking on a link, button, or any interactive element
                    var target = e.target;
                    if (target.tagName === 'A' || 
                        target.tagName === 'BUTTON' || 
                        target.closest('a') || 
                        target.closest('button') ||
                        target.closest('input') ||
                        target.closest('select') ||
                        target.closest('textarea')) {
                        return;
                    }
                    // Also check if clicking on navigation buttons in featured article
                    if (target.id && (target.id.indexOf('btnHero') === 0 || target.closest('[id*="btnHero"]'))) {
                        return;
                    }
                    
                    // Handle double-click
                    if (clickTimer === null) {
                        // First click - start timer
                        clickTimer = setTimeout(function() {
                            clickTimer = null;
                        }, 300); // 300ms window for double-click
                    } else {
                        // Second click within 300ms - navigate
                        clearTimeout(clickTimer);
                        clickTimer = null;
                        window.location.href = articleUrl;
                    }
                };
                
                card.addEventListener('click', clickHandler);
            }
            
            function makeCardsClickable() {
                // Handle regular article cards
                var cards = document.querySelectorAll('.card-article');
                cards.forEach(function(card) {
                    // Find the "Đọc thêm" link in the card
                    var readMoreLink = card.querySelector('a[href*="Details.aspx"]');
                    if (readMoreLink) {
                        var articleUrl = readMoreLink.getAttribute('href');
                        makeCardClickable(card, articleUrl);
                    }
                });
                
                // Handle featured article card (banner)
                var featuredCard = document.getElementById('featuredArticle');
                if (featuredCard) {
                    // Reset clickable state to allow re-processing
                    featuredCard.dataset.clickable = 'false';
                    
                    var featuredLink = document.getElementById('featuredLink');
                    if (featuredLink) {
                        var featuredUrl = featuredLink.getAttribute('href');
                        // Also try to get href from the link's actual href property
                        if (!featuredUrl || featuredUrl === '#' || featuredUrl === 'javascript:void(0);') {
                            featuredUrl = featuredLink.href;
                        }
                        if (featuredUrl && featuredUrl !== '#' && featuredUrl !== 'javascript:void(0);' && featuredUrl.indexOf('Details.aspx') !== -1) {
                            makeCardClickable(featuredCard, featuredUrl);
                        }
                    }
                }
            }
            
            // Run on page load
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', makeCardsClickable);
            } else {
                makeCardsClickable();
            }
            
            // Also run after a short delay to catch dynamically loaded content
            setTimeout(makeCardsClickable, 500);
            setTimeout(makeCardsClickable, 1000);
            setTimeout(makeCardsClickable, 2000);
            setTimeout(makeCardsClickable, 3000);
            
            // Use MutationObserver to watch for changes in banner
            if (typeof MutationObserver !== 'undefined') {
                var observer = new MutationObserver(function(mutations) {
                    var featuredCard = document.getElementById('featuredArticle');
                    if (featuredCard) {
                        var featuredLink = document.getElementById('featuredLink');
                        if (featuredLink) {
                            var featuredUrl = featuredLink.getAttribute('href') || featuredLink.href;
                            if (featuredUrl && featuredUrl !== '#' && featuredUrl !== 'javascript:void(0);' && featuredUrl.indexOf('Details.aspx') !== -1) {
                                makeCardClickable(featuredCard, featuredUrl);
                            }
                        }
                    }
                });
                
                // Observe changes to featured article
                setTimeout(function() {
                    var featuredCard = document.getElementById('featuredArticle');
                    if (featuredCard) {
                        observer.observe(featuredCard, {
                            childList: true,
                            subtree: true,
                            attributes: true,
                            attributeFilter: ['href']
                        });
                    }
                }, 1000);
            }
        })();
    </script>
</body>
